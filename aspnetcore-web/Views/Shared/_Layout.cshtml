<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/index.css" />
    <title>Document</title>
</head>

<body>
    <header>
        <div class="col-12 row">
            <div class="col-3 row">
                <div class="col-10">
                    <img src="~/img/icon.png" alt="icon-hotel" class="img-icon">
                </div>
                <div class="col-2">
                    <a class="text-hotel-ruden">Отель Ruden Hotel
                    </a>
                </div>
            </div>
            <div class="col-2">
                <a class="menu-text" asp-controller="Home" asp-action="Index">Главная
                </a>
            </div>
            <div class="col-2">
                <a class="menu-text" asp-area="" asp-controller="Home" asp-action="ListRooms">Номера</a>
            </div>
            <div class="col-2">
                <a class="menu-text" asp-area="" asp-controller="Home" asp-action="RegistrationForm">Регистрация
                </a>
            </div>
            <div class="col-2">
                <a class="menu-text">Забронировать
                </a>
            </div>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="col-12 row">
            <div class="col-1"></div>
            <div class="col-3">
                <div class="text-footer">Техническая поддержка</div>
            </div>
            <div class="col-1"></div>
            <div class="col-3">
                <div class="text-footer">Отзывы</div>
            </div>
            <div class="col-1"></div>
            <div class="col-3">
                <div class="text-footer">Контакты</div>
            </div>
        </div>
    </footer>
    <script src="js/Slider.js"></script>
     @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
   
